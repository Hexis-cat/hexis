{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["bun-types"],
    "paths": {
      "@db/*": ["./db/*"],
      "@external/*": ["./src/external/*"],
      "@modules/*": ["./src/modules/*"],
      "@commons/*": ["./src/commons/*"],
      "@lib/*": ["./src/lib/*"]
    }
  }
}
