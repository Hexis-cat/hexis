{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@db/*": ["./db/*"]
    }
  }
}
